<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:orientation="vertical"
        android:scrollbars="none">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp" />

        <Button
            android:id="@+id/backG"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#00FF5555"
            android:onClick="onClick"
            android:text="Back"
            android:textColor="#55ffaa" />

        
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp" />

        <Button
            android:id="@+id/viMusic"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="ViMusic" />

        <Button
            android:id="@+id/newPipe"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="NewPipe" />

        <Button
            android:id="@+id/onStream"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="OnStream" />

        <Button
            android:id="@+id/soul"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="Soul" />

        <Button
            android:id="@+id/pdnsqs"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="PDNSQS" />

        <Button
            android:id="@+id/repainter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="Repainter" />

        <Button
            android:id="@+id/skit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="Skit" />

        <Button
            android:id="@+id/ladb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#aaffaa"
            android:onClick="onClick"
            android:text="LADB" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>